{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globalSetup": "./config/setup.js",
  "globalTeardown": "./config/teardown.js",
  "moduleNameMapper": {
    "^@notion(|/.*)$": "<rootDir>/../src/$1",
    "^@app/domain/(.*)": "<rootDir>/../libs/domain/src/$1",
    "^@app/domain": "<rootDir>/../libs/domain/src",
    "^@app/application/(.*)": "<rootDir>/../libs/application/src/$1",
    "^@app/application": "<rootDir>/../libs/application/src"
  }
}